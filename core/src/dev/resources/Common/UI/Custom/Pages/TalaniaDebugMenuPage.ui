$C = "../Common.ui";

$C.@Panel {
  LayoutMode: Top;
  Anchor: (Width: 864, Height: 624);
  Padding: (Full: 16);

  Group {
    LayoutMode: Top;
    Anchor: (Width: 826, Height: 586);
    Padding: (Full: 12);

    Label #TitleLabel {
      Style: (...$C.@TitleStyle, FontSize: 20);
      Anchor: (Width: 768);
      Text: "Talania Debug";
      Padding: (Bottom: 6);
    }

    Label #SubtitleLabel {
      Style: (...$C.@DefaultLabelStyle);
      Anchor: (Width: 768);
      Text: "Dev build only. Module tools and core debug.";
      Padding: (Bottom: 10);
    }

    Group {
      LayoutMode: Left;
      Anchor: (Height: 32);

      $C.@SecondaryTextButton #OpenLogSettingsButton {
        Text: "Log Settings";
        TooltipText: "Configure per-player debug categories.";
        Anchor: (Width: 160, Height: 28);
      }

      $C.@SecondaryTextButton #OpenCombatLogButton {
        Text: "Combat Log";
        TooltipText: "View recent combat log entries for this player.";
        Anchor: (Width: 160, Height: 28, Left: 10);
      }

      $C.@SecondaryTextButton #OpenStatModifiersButton {
        Text: "Stat Modifiers";
        TooltipText: "Adjust Talania stat modifiers for this player.";
        Anchor: (Width: 160, Height: 28, Left: 10);
      }
    }

    Label {
      Style: (...$C.@DefaultLabelStyle, RenderBold: true);
      Text: "Modules";
      Padding: (Top: 12, Bottom: 6);
    }

    Group #ModuleList {
      LayoutMode: Top;
      Anchor: (Width: 768, Height: 312);
      Padding: (Full: 2);

      Group #Module1Container {
        LayoutMode: Left;
        Anchor: (Width: 768, Height: 40);
        Padding: (Full: 6);
        Background: (TexturePath: "../Common/ContainerPanelPatch.png", Border: 4);

        Label #Module1Label {
          Style: (...$C.@DefaultLabelStyle);
          Text: "Module 1";
          Anchor: (Width: 504);
        }

        $C.@SecondaryTextButton #Module1Button {
          Text: "Open";
          Anchor: (Width: 120, Height: 28, Left: 10);
        }
      }

      Group #Module2Container {
        LayoutMode: Left;
        Anchor: (Width: 768, Height: 40, Top: 6);
        Padding: (Full: 6);
        Background: (TexturePath: "../Common/ContainerPanelPatch.png", Border: 4);

        Label #Module2Label {
          Style: (...$C.@DefaultLabelStyle);
          Text: "Module 2";
          Anchor: (Width: 504);
        }

        $C.@SecondaryTextButton #Module2Button {
          Text: "Open";
          Anchor: (Width: 120, Height: 28, Left: 10);
        }
      }

      Group #Module3Container {
        LayoutMode: Left;
        Anchor: (Width: 768, Height: 40, Top: 6);
        Padding: (Full: 6);
        Background: (TexturePath: "../Common/ContainerPanelPatch.png", Border: 4);

        Label #Module3Label {
          Style: (...$C.@DefaultLabelStyle);
          Text: "Module 3";
          Anchor: (Width: 504);
        }

        $C.@SecondaryTextButton #Module3Button {
          Text: "Open";
          Anchor: (Width: 120, Height: 28, Left: 10);
        }
      }

      Group #Module4Container {
        LayoutMode: Left;
        Anchor: (Width: 768, Height: 40, Top: 6);
        Padding: (Full: 6);
        Background: (TexturePath: "../Common/ContainerPanelPatch.png", Border: 4);

        Label #Module4Label {
          Style: (...$C.@DefaultLabelStyle);
          Text: "Module 4";
          Anchor: (Width: 504);
        }

        $C.@SecondaryTextButton #Module4Button {
          Text: "Open";
          Anchor: (Width: 120, Height: 28, Left: 10);
        }
      }
    }

  }
}
