      Text: "Dev build only. Toggle per-player debug categories.";
      Padding: (Bottom: 10);
    }

    Group #ContentScroll {
      LayoutMode: TopScrolling;
      ScrollbarStyle: $C.@DefaultScrollbarStyle;
      Anchor: (Width: 768, Height: 456);
      Padding: (Full: 2);

      Group #DamagePanel {
        LayoutMode: Top;
        Anchor: (Width: 768, Height: 120);
        Padding: (Full: 10);
        Background: (TexturePath: "../Common/ContainerPanelPatch.png", Border: 4);

        Label { Style: (...$C.@DefaultLabelStyle, RenderBold: true); Text: "Damage Logs"; Padding: (Bottom: 4); }
        Label #DamageDescription { Style: (...$C.@DefaultLabelStyle); Text: ""; Padding: (Bottom: 4); }
        Label #DamageValue { Style: (...$C.@DefaultLabelStyle); Text: ""; Padding: (Bottom: 6); }
        $C.@SecondaryTextButton #DamageToggle { Text: "Toggle"; Anchor: (Width: 120, Height: 26); }
