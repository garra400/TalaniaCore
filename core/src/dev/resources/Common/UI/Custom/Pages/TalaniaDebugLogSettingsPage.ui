      Text: "Talania Debug";
      Padding: (Bottom: 6);
    }

    Label #SubtitleLabel {
      Style: (...$C.@DefaultLabelStyle);
      Anchor: (Width: 640);
      Text: "Dev build only. Toggle per-player debug categories.";
      Padding: (Bottom: 10);
    }

    Group #ContentScroll {
