$C = "../Common.ui";

$C.@Panel {
  LayoutMode: Top;
  Anchor: (Width: 864, Height: 672);
  Padding: (Full: 16);

  Group {
    LayoutMode: Top;
    Anchor: (Width: 826, Height: 634);
    Padding: (Full: 12);

    Label #TitleLabel {
      Style: (...$C.@TitleStyle, FontSize: 20);
      Anchor: (Width: 768);
      Text: "Talania Debug";
      Padding: (Bottom: 6);
    }

