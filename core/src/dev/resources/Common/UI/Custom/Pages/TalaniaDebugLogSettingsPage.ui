        Label #DamageDescription { Style: (...$C.@DefaultLabelStyle); Text: ""; Padding: (Bottom: 4); }
        Label #DamageValue { Style: (...$C.@DefaultLabelStyle); Text: ""; Padding: (Bottom: 6); }
        $C.@DefaultTextButtonStyle #DamageToggle { Text: "Toggle"; Anchor: (Width: 120, Height: 26); }
