$C = "../Common.ui";

$C.@Panel {
  LayoutMode: Top;
  Anchor: (Width: 864, Height: 624);
  Padding: (Full: 16);

  Group {
    LayoutMode: Top;
    Anchor: (Width: 826, Height: 586);
    Padding: (Full: 12);

    Label #TitleLabel {
      Style: (...$C.@TitleStyle, FontSize: 20);
      Anchor: (Width: 768);
      Text: "Races Debug";
      Padding: (Bottom: 6);
    }

    Label #CurrentRaceLabel {
      Style: (...$C.@DefaultLabelStyle);
      Anchor: (Width: 768);
      Text: "Current: None";
      Padding: (Bottom: 12);
    }

    Group #RaceList {
      LayoutMode: Top;
      Anchor: (Width: 768, Height: 360);
      Padding: (Full: 2);

      Group {
        LayoutMode: Left;
        Anchor: (Width: 768, Height: 40);
        Padding: (Full: 6);
        Background: (TexturePath: "../Common/ContainerPanelPatch.png", Border: 4);

        Label #HumanLabel {
          Style: (...$C.@DefaultLabelStyle);
          Text: "Human";
          TooltipText: "XP bonus plus 10 percent. Magic damage taken plus 5 percent.";
          Anchor: (Width: 504);
        }
        $C.@SecondaryTextButton #HumanButton { Text: "Set"; Anchor: (Width: 120, Height: 28, Left: 10); }
      }

      Group {
        LayoutMode: Left;
        Anchor: (Width: 768, Height: 40, Top: 6);
        Padding: (Full: 6);
        Background: (TexturePath: "../Common/ContainerPanelPatch.png", Border: 4);

        Label #HighElfLabel {
          Style: (...$C.@DefaultLabelStyle);
          Text: "High Elf";
          TooltipText: "Mana plus 20 percent. Health minus 10 percent.";
          Anchor: (Width: 504);
        }
        $C.@SecondaryTextButton #HighElfButton { Text: "Set"; Anchor: (Width: 120, Height: 28, Left: 10); }
      }

      Group {
        LayoutMode: Left;
        Anchor: (Width: 768, Height: 40, Top: 6);
        Padding: (Full: 6);
        Background: (TexturePath: "../Common/ContainerPanelPatch.png", Border: 4);

        Label #OrcLabel {
          Style: (...$C.@DefaultLabelStyle);
          Text: "Orc";
          TooltipText: "Melee damage plus 15 percent. Mana regen minus 20 percent.";
          Anchor: (Width: 504);
        }
        $C.@SecondaryTextButton #OrcButton { Text: "Set"; Anchor: (Width: 120, Height: 28, Left: 10); }
      }

      Group {
        LayoutMode: Left;
        Anchor: (Width: 768, Height: 40, Top: 6);
        Padding: (Full: 6);
        Background: (TexturePath: "../Common/ContainerPanelPatch.png", Border: 4);

        Label #DwarfLabel {
          Style: (...$C.@DefaultLabelStyle);
          Text: "Dwarf";
          TooltipText: "Armor plus 10 percent. Poison resistance plus 10 percent. Move speed minus 10 percent.";
          Anchor: (Width: 504);
        }
        $C.@SecondaryTextButton #DwarfButton { Text: "Set"; Anchor: (Width: 120, Height: 28, Left: 10); }
      }

      Group {
        LayoutMode: Left;
        Anchor: (Width: 768, Height: 40, Top: 6);
        Padding: (Full: 6);
        Background: (TexturePath: "../Common/ContainerPanelPatch.png", Border: 4);

        Label #NightwalkerLabel {
          Style: (...$C.@DefaultLabelStyle);
          Text: "Nightwalker";
          TooltipText: "Move speed plus 15 percent at night. HP regen minus 10 percent in sunlight.";
          Anchor: (Width: 504);
        }
        $C.@SecondaryTextButton #NightwalkerButton { Text: "Set"; Anchor: (Width: 120, Height: 28, Left: 10); }
      }

      Group {
        LayoutMode: Left;
        Anchor: (Width: 768, Height: 40, Top: 6);
        Padding: (Full: 6);
        Background: (TexturePath: "../Common/ContainerPanelPatch.png", Border: 4);

        Label #BeastkinLabel {
          Style: (...$C.@DefaultLabelStyle);
          Text: "Beastkin";
          TooltipText: "Fall resistance plus 50 percent. Jump height plus 20 percent.";
          Anchor: (Width: 504);
        }
        $C.@SecondaryTextButton #BeastkinButton { Text: "Set"; Anchor: (Width: 120, Height: 28, Left: 10); }
      }

      Group {
        LayoutMode: Left;
        Anchor: (Width: 768, Height: 40, Top: 6);
        Padding: (Full: 6);
        Background: (TexturePath: "../Common/ContainerPanelPatch.png", Border: 4);

        Label #StarbornLabel {
          Style: (...$C.@DefaultLabelStyle);
          Text: "Starborn";
          TooltipText: "Regenerating energy shield. Healing from food/potions reduced.";
          Anchor: (Width: 504);
        }
        $C.@SecondaryTextButton #StarbornButton { Text: "Set"; Anchor: (Width: 120, Height: 28, Left: 10); }
      }
    }

    Group {
      LayoutMode: Left;
      Anchor: (Height: 32, Top: 10);
      $C.@SecondaryTextButton #ReturnButton { Text: "Return"; Anchor: (Width: 120, Height: 28); }
    }
  }
}
